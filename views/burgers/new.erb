<div id="newBurger">
  <h1>Spotted a new burger?</h1>

  <div class="flex">
    <form class="newentry" action="/burgers" method="POST">
      <fieldset>
        <img id="addburgerlogo" src="/images/burgerlogo.png">

        <select name="restaurant_id" id="restlist">
          <% @restaurants.each do |restaurant|%>
          <option value="<%= restaurant.id %>"><%= restaurant.name %></option>
          <% end %>
        </select>

        <br>
        <label for="name">Name:</label>
        <br>
        <input type="text" name="name" id="name">
        <br>
        <label for="price">Price (Â£):</label>
        <br>
        <input type="number" min="1" step=".01" name="price" id="price">
        <br>
        <label for="veg">Vegetarian?</label>
        <br>
        <input type="text" name="veg" id="veg">
        <br>
        <p></p>
        <input class="btn--submit" type="submit" value="New Burger!">
      </fieldset>
    </form>
  </div>

</div>

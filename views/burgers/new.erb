<div id="newBurger">
<h1>Found a new burger?</h1>

<form class="newentry" action="/burgers" method="POST">
  <fieldset>

    <select name="restaurant_id" id="rest>">
      <% @restaurants.each do |restaurant|%>
      <option value="<%= restaurant.id %>"><%= restaurant.name %></option>
      <% end %>
    </select>
    <br>
    <label for="name">Name:</label>
    <input type="text" name="name" id="name">
    <br>
    <label for="price">Price:</label>
    <input type="number" min="1" step=".01" name="price" id="price">
    <br>
    <label for="veg">Vegetarian?</label>
    <input type="text" name="veg" id="veg">
    <br>
    <input class="btn--submit" type="submit" value="New Burger!">
  </fieldset>
</form>
</div>

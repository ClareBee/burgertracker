
<h1>Discounts from Deals</h1>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/applyingdeals/new">New deal!</a>
</p>

<!-- insert search function here -->


  <% for discount in @applyingdeals %>

    <p>Discount Name:<%= discount.deal.name %> </p>
    <p>Applies to: <%= discount.burger.name %> </p>
    <p>Original Price: £<%= '%.2f' % discount.burger.price.to_f %></p>
    <p>New Price: £<%= '%.2f' % (discount.burger.price.to_f - (discount.deal.discount.to_f * discount.burger.price.to_f)) %></p>
    <p>Amount saved: £<%= '%.2f' % (discount.deal.discount.to_f * discount.burger.price.to_f) %></p>
    <form action="/applyingdeals/<%= discount.id %>/delete" method="POST">
        <input class="" type="submit" value="delete" />
    </form>
  <% end %>

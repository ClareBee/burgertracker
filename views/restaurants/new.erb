<div id="newrest">

<h1>Spotted a new restaurant?</h1>

  <form class="newentry" action="/restaurants" method="POST">

    <fieldset >
      <img id="fastfood" src="/images/restaurant.png">
      <label for="name">Restaurant Name:</label>
      <br>
      <input type="text" name="name" id="name" required>
      <br>
      <label for="location">Location:</label>
      <br>
      <input type="location" name="location" id="location" required>
      <br>
      <label for="rating">Rating Out of 5:</label>
      <br>
      <input type="number" name="rating" id="rating" min="0" max="5" required>
      <br>
      <input class="btn--submit" type="submit" value="New">
    </fieldset>

  </form>

</div>

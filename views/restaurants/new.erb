<div id="newrest">

<h1>Spotted a new restaurant?</h1>

  <form class="newentry" action="/restaurants" method="POST">

    <fieldset >
      <img id="fastfood" src="/images/restaurant.png">
      <label for="name">Restaurant Name:</label>
      <br>
      <input type="text" name="name" id="name">
      <br>
      <label for="location">Location:</label>
      <br>
      <input type="location" name="location" id="location">
      <br>
      <label for="image">Image:</label>
      <br>
      <input type="text" name="url" id="image">
      <br>
      <input class="btn--submit" type="submit" value="New">
    </fieldset>

  </form>

</div>
